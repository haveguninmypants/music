-- Wrap the Geoscanner peripheral on the right side
local geoscanner = peripheral.wrap("right")

-- Define the Y-level to scan (e.g., 10 for Y = 10)
local scanY = 10

-- Output a message to the terminal
print("Scanning layer at Y = " .. scanY)

-- Iterate through the chunk
for x = 1, 16 do
    for z = 1, 16 do
        local blockInfo = geoscanner.scan(x, scanY, z)

        if blockInfo and blockInfo.name then
            print("Block at X=" .. x .. " Z=" .. z .. ": " .. blockInfo.name)
        end
    end
end
