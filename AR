-- Sample AR Goggles Menu
local scripts = {
  { name = "Script 1", path = "script1.lua" },
  { name = "Script 2", path = "script2.lua" },
  { name = "Script 3", path = "script3.lua" },
}

local selectedOption = 1

local function drawMenu()
  -- Wrap the AR Goggles' display peripheral on the left side.
  local display = peripheral.wrap("left")
  if not display then
    error("AR Goggles display not found.")
  end

  display.clear()
  display.setCursorPos(1, 1)
  display.write("AR Goggles Menu")

  for i, script in ipairs(scripts) do
    display.setCursorPos(1, i + 2)
    if i == selectedOption then
      display.write("> " .. script.name)
    else
      display.write("  " .. script.name)
    end
  end
end

while true do
  drawMenu()
  local _, key = os.pullEvent("key")

  if key == keys.up and selectedOption > 1 then
    selectedOption = selectedOption - 1
  elseif key == keys.down and selectedOption < #scripts then
    selectedOption = selectedOption + 1
  elseif key == keys.enter then
    -- Execute the selected script
    local script = scripts[selectedOption]
    shell.run(script.path)
  elseif key == keys.q then
    -- Exit the menu (press 'q' to quit)
    break
  end
end

-- Clear the AR Goggles display after exiting the menu
local display = peripheral.wrap("left")
display.clear()
